<!DOCTYPE html>
<html lang="{{ .lang }}">
<head>
    <meta charset="utf-8">
    <title>{{ .title }}</title>
    <meta name="description" content="inceptiondb">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/blue.css" rel="stylesheet">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <script defer src="https://umami.hola.cloud/script.js" data-website-id="cbcb870c-e9a8-460a-8b38-ab2fa77a4cc2"></script>
</head>
<body url="{{ .url }}">
<header class="site-header">
    <div class="container nav-bar">
        <a href="/" class="logo" aria-label="HolaCloud"></a>
        <nav class="main-menu" aria-label="Primary">
            {{ link "docs" }}
            <a class="link" href="/pricing/">Pricing</a>
            <a class="link" href="/blog/">Blog</a>
            <a class="link button-console" href="https://console.hola.cloud/">Console</a>
        </nav>
        <div class="header-actions">
            <a id="login-button" class="button button-link" href="https://console.hola.cloud/">Log in</a>
            <a class="button button-action" href="https://console.hola.cloud/">Start now</a>
        </div>
    </div>
</header>
<div class="languages-frame">
    <div class="container">
        {{ .langMenu }}
    </div>
</div>
<main>
    <div class="container page-layout">
        <aside class="sidebar">
            <div class="sidebar-card">
                {{ if .versionMenu }}
                <div class="version-menu">
                    {{ .versionMenu }}
                </div>
                {{ end }}
                {{ if isUnder "docs" }}
                    <div class="nav-tree">
                        {{ tree "docs" }}
                    </div>
                {{ end }}
                {{ if isUnder "inceptiondb" }}
                    <div class="nav-tree">
                        {{ tree "inceptiondb" }}
                    </div>
                {{ end }}
            </div>
        </aside>
        <section class="main-column">
            {{ .breadcrumb }}
            <div class="content">
                <nav class="index-panel">
                    {{ .index }}
                </nav>
                <article class="document">
                {{ .content }}
                </article>
            </div>
        </section>
    </div>
</main>
<footer class="footer">
    <div class="container footer-content">
        <div class="footer-branding">
            <a href="/" class="logo footer-logo" aria-label="HolaCloud"></a>
            <p>Reliable infrastructure, clear pricing, and responsive support to help your teams build with confidence.</p>
        </div>
        <div class="footer-links">
            <div>
                <h3>Platform</h3>
                <a href="/docs/">Documentation</a>
                <a href="/pricing/">Pricing</a>
                <a href="https://console.hola.cloud/">Console</a>
            </div>
            <div>
                <h3>Company</h3>
                <a href="/blog/">Blog</a>
                <a href="mailto:team@hola.cloud">Contact</a>
                <a href="/robots.txt">Status</a>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container">
            <span>Â© {{ now | date "2006" }} HolaCloud. All rights reserved.</span>
        </div>
    </div>
</footer>
<script>

    // source: https://stackoverflow.com/questions/49958471/highlight-item-in-an-index-based-on-currently-visible-content-during-scroll
    function isElementInViewport (el) {

        var rect     = el.getBoundingClientRect(),
            vWidth   = window.innerWidth || document.documentElement.clientWidth,
            vHeight  = window.innerHeight || document.documentElement.clientHeight,
            efp      = function (x, y) { return document.elementFromPoint(x, y) };

        if (rect.right < 0 || rect.bottom < 0
            || rect.left > vWidth || rect.top > vHeight)
            return false;

        return (
            el.contains(efp(rect.left,  rect.top))
            ||  el.contains(efp(rect.right, rect.top))
            ||  el.contains(efp(rect.right, rect.bottom))
            ||  el.contains(efp(rect.left,  rect.bottom))
        );
    }

    function highlightIndex() {
        let v = false;
        document.querySelectorAll('.index a').forEach(a => {
            const targetId = a.getAttribute('href');
            if (!targetId) {
                return;
            }
            const el = document.getElementById(targetId.slice(1));

            if (el && !v && isElementInViewport(el)) {
                a.classList.add('active');
                v = true;
            } else {
                a.classList.remove('active');
            }
        });
    }

    document.addEventListener('scroll', highlightIndex, true);
    document.addEventListener('load', highlightIndex, true);
</script>
</body>
</html>
